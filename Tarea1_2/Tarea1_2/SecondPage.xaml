<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1_2.SecondPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding nombre}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="nombre"/>

            <Label Text="{Binding apellidos}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="apellido"/>


            <Label Text="{Binding edad}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="edad" />

            <Label Text="{Binding correo}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="correo"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>